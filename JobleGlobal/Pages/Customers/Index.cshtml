@model JobleGlobal.Pages.Customers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Customer[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customer[0].ContactNumber1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customer[0].ContactNumber2)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customer[0].Email1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customer[0].Email2)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customer[0].PrimaryContactPersonGuid)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Customer) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactNumber1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactNumber2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrimaryContactPersonGuid)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
